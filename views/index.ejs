    <section id="bestSeller">
      <div class="secHeader">
        <h1>Best seller</h1>
      </div>
      <div class="articlesWrapper">
        <%highSellProducts.forEach(prod=>{%>
        <article>
          <!-- prettier-ignore -->
          <a class="products_title" href=ProdId=<%=prod._id%>>
            <p><%=prod.Prod_name%></p>
          </a>
          <!-- prettier-ignore -->
          <a href=ProdId=<%=prod._id%>>
            <!-- prettier-ignore -->
            <img
              src=<%=prod.Prod_images[0]%>
            alt="product" />
          </a>
          <div class="product__detail">
            <span
              ><%=prod.sell_price%> $
              <p><%=prod.price%> $</p></span
            >
            <h6 class="inStock">in stock</h6>
            <div class="add_cart">
              <a href="/AddCart/ref=<%=prod._id%>">
                <i class="fa-sharp fa-solid fa-cart-plus"></i>
              </a>
            </div>
            <div class="prod__act">
              <a href="/AddWishList/ref=<%=prod._id%>">
                <i class="fa-regular fa-heart"></i>
                <p>Add to wishlist</p>
              </a>
              <a href="ProdId=<%=prod._id%>">
                <i class="fa-regular fa-eye"></i>
                <p>Checkout</p>
              </a>
            </div>
          </div>
        </article>
        <%})%>
      </div>
    </section>

