<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon" />
    <!--* Google icons -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <!--* Font awesome -->
    <script
      src="https://kit.fontawesome.com/53405766b0.js"
      crossorigin="anonymous"
    ></script>
    <!--* CSS -->
    <link rel="stylesheet" href="/css/products-page.css" />
    <link rel="stylesheet" href="/css/products-pageDark.css" />
    <script src="/JavaScript/products-page.js" defer></script>
    <title>EasyTech Desktop</title>
  </head>
  <body>
    <%- include('./includes/nav.ejs'); -%>

    <div id="mainContainer">
      <div class="links_Filter">
        <div class="header">
          <span>Browse Categories</span>
        </div>
        <div class="quickLinks">
          <div class="link">
            <a href="/EasyTech/desktop">Workstation</a>
          </div>
          <div class="link">
            <a href="/EasyTech/laptops">Laptop</a>
          </div>
          <div class="link">
            <a href="/EasyTech/components">Components</a>
          </div>
          <div class="link">
            <a href="/EasyTech/Software">Software</a>
          </div>
        </div>
        <div class="header">
          <span>Filters</span>
        </div>
        <form action="/Product/filter" method="post">
        <div class="filter">
            <div>
              <span>Price :</span>
              <span id="minVal"><%=minPrice%>$</span>
              <small>-</small>
              <span id="maxVal"><%=maxPrice%>$</span>
            </div>
            <input
              type="range"
              min="<%=minPrice%>"
              max="<%=maxPrice%>"
              step="100"
              value="10"
              id="filteRange"
              name="filteRange"
            />
            <input type="hidden" value="<%=maxPrice%>" name="max">
            <button type="submit">Filter</button>
          </form>
        </div>
      </div>
      <div class="wrapper">
        <div class="nav">
          <button id="showFilter">
            <i class="fa-solid fa-arrow-up-wide-short"></i>
            Filter
          </button>
            <select name="filterByCatgory" id="filterByCatgory">
              <option>Default sorting</option>
              <option>Sort by popularity</option>
              <option>Sort by rating</option>
            <option>Sort from newset to oldest</option>
            <option>Sort by ascending price</option>
            <option>Sort by descending price</option>
          </select>
          <select name="ProductsQuantityControl" id="ProductsQuantityControl">
            <option value="6">Show 6</option>
            <option value="12">Show 12</option>
            <option value="24">Show 24</option>
          </select>
          <div class="nextPage">
            <a href="#">
              <span>Filter</span>
              <i class="fa-solid fa-arrow-right-long"></i>
            </a>
          </div>
        </div>
        <div class="__products">
          <% products.forEach((prod)=>{%>
          <article>
            <a class="products_title" href="/<%=prod._id%>">
              <p><%=prod.Prod_name%></p>
            </a>
            <a href="/<%=prod._id%>">
              <img src="<%=prod.Prod_images[0]%>" alt="product" />
            </a>
            <div class="product__detail">
              <span
                ><%=prod.sell_price%> $
                <p><%=prod.price%> $</p></span
              >
              <h6 class="inStock">in stock</h6>
              <div class="add_cart">
                <a href="#">
                  <i class="fa-sharp fa-solid fa-cart-plus"></i>
                </a>
              </div>
              <div class="prod__act">
                <a href="#">
                  <i class="fa-regular fa-heart"></i>
                  <p>Add to wishlist</p>
                </a>
                <a href="/<%=prod._id%>">
                  <i class="fa-regular fa-eye"></i>
                  <p>Checkout</p>
                </a>
              </div>
            </div>
          </article>
          <%})%>
        </div>
      </div>
    </div>

    <div class="mailContiner">
      <div>
        <i class="fa-regular fa-paper-plane"></i>
        <p>Sign up and never miss our spacial offers</p>
      </div>
        <form action="/Sub-email" method="post">
        <div class="container">
          <input
            type="email"
            name="email"
            placeholder="Enter your email address"
          />
          <button type="submit">SEND</button>
        </div>
      </form>
    </div>

    <%- include('./includes/footer.ejs'); -%>
  </body>
</html>
